{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "types": ["node"],
    "module": "commonjs",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "dist"
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
